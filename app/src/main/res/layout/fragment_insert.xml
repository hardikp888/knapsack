<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/edtxt_type"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="@string/expense_type"
        android:singleLine="true" />

    <EditText
        android:id="@+id/edtxt_description"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="@string/expense_des"
        android:singleLine="true" />

    <EditText
        android:id="@+id/edtxt_amount"
        android:layout_width="200dp"
        android:hint="@string/expense_amount"
        android:inputType="number"
        android:layout_height="wrap_content"
        android:singleLine="true" />

    <EditText
        android:id="@+id/edtxt_date"
        android:layout_width="200dp"
        android:hint="@string/expense_date"
        android:layout_height="wrap_content"
        android:singleLine="true" />

    <Button
        android:id="@+id/btn_insert_expense"
        android:layout_width="150dp"
        android:text="@string/save"
        android:layout_height="wrap_content" />

</LinearLayout>
